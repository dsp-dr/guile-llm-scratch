# direnv configuration for Guile LLM development
# Usage: direnv allow

# Add src directory to Guile load path
export GUILE_LOAD_PATH="${PWD}/src:${GUILE_LOAD_PATH}"
export GUILE_LOAD_COMPILED_PATH="${PWD}/build:${GUILE_LOAD_COMPILED_PATH}"

# Set Guile optimization level
export GUILE_AUTO_COMPILE=1
export GUILE_WARN_DEPRECATED=detailed

# Development environment variables
export PROJECT_ROOT="${PWD}"
export TEST_DIR="${PWD}/tests"
export DOC_DIR="${PWD}/docs"

# Convenience aliases
alias repl="guile3 -L src/"
alias test="gmake test"
alias tangle="gmake tangle"
alias build="gmake all"